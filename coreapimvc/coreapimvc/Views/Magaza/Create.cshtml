@model coreapimvc.Models.Magazalar

@{
    ViewData["Title"] = "Create";
}

<h1>Mağaza Ekle</h1>
<br />
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="magazaID" class="control-label"></label>
                <input asp-for="magazaID" class="form-control" />
                <span asp-validation-for="magazaID" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="magazaAdi" class="control-label"></label>
                <input asp-for="magazaAdi" class="form-control" />
                <span asp-validation-for="magazaAdi" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="magazaAdres" class="control-label"></label>
                <input asp-for="magazaAdres" class="form-control" />
                <span asp-validation-for="magazaAdres" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="magazaCalisanSayisi" class="control-label"></label>
                <input asp-for="magazaCalisanSayisi" class="form-control" />
                <span asp-validation-for="magazaCalisanSayisi" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Listeye geri dön..</a>
</div>

